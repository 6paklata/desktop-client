{
  "name": "foxlet",
  "version": "5.0.0",
  "productName": "Foxlet",
  "description": "Stellar desktop client",
  "main": "main.js",
  "homepage": "https://wallet.stellar.chat/",
  "repository": {
    "type": "git",
    "url": "https://github.com/stellarchat/desktop-client.git"
  },
  "author": {
    "name": "stellarchat",
    "email": "stellar@ripplefox.com"
  },
  "license": "MIT",
  "keywords": [
    "stellar",
    "wallet",
    "electron",
    "angularjs"
  ],
  "scripts": {
    "postinstall": "yarn run app-install",
    "start": "electron .",
    "app-install": "cd src && yarn install --ignore-optional",
    "build": "yarn run -s build-linux && yarn run -s build-mac && yarn run -s build-win",
    "build-linux": "electron-builder --x64 --linux",
    "build-mac": "electron-builder --x64 --mac",
    "build-win": "electron-builder --x64 --win",
    "lint": "eslint . --ext=js,html",
    "lintfix": "eslint . --ext=js,html --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "2.0.2",
    "electron-builder": "20.15.1",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^12.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-html": "^4.0.3"
  }
}
